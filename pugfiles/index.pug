doctype html
html

  head
    title='Bluhare'
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='assets/css/index.css')
    link(rel='stylesheet' href='assets/css/vendors/animate.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Questrial')
    link(rel='icon' type='image/png' href='assets/images/bh-favicon.png')
    meta(http-equiv='cache-control' content='max-age=0')
    meta(http-equiv='cache-control' content='no-cache')
    meta(http-equiv='expires' content='0')
    meta(http-equiv='expires' content='Tue, 01 Jan 1980 1:00:00 GMT')
    meta(http-equiv='pragma' content='no-cache')

  header#nav-section
  include navigation.pug

  body
    .main-wrapper
      .main-carousel-container
        .owl-carousel.owl-theme.main-carousel
          .item.slide1
            img(src="assets/images/main-slider/main-slider-1.jpg")
          .item.slide2
            img(src="assets/images/main-slider/main-slider-2.jpg")
          .item.slide3
            img(src='assets/images/main-slider/main-slider-3.jpg')
          .item.slide4
            img(src='assets/images/main-slider/main-slider-4.jpg')
          .item.slide5
            img(src='assets/images/main-slider/main-slider-5.jpg')
      .who-are-we-button-container
        a(href='about-us.html')
          .who-are-we-button
            p Get To Know Us
      .home-cta
        h2.first We Know Slots!
        h2 social/mobile/web/casino

        p Original game design, art, sound, math, development and consulting, we do it all!

      .hire-us-panel
        .hire-us-text
          p.first Finding yourself short on games or time?
          p Need fresh ideas?
          p Looking for that "Vegas" feel?
        .hire-us-button-container
          a(href='contact.html')
            .hire-us-button
              p Hire US!
              //.hire-left-spacer
              .click-icon


      .play-our-games-panel
        .play-our-games-top-text
          h2 Play Our Games!
          p You may find our work in many apps...
        .bottom-carousel-container
          .owl-carousel.owl-theme.bottom-carousel
            .item.slide1
              img(src="assets/images/bot-slide/bot-slide-1.png")
            .item.slide2
              img(src="assets/images/bot-slide/bot-slide-2.png")
            .item.slide3
              img(src="assets/images/bot-slide/bot-slide-3.png")
            .item.slide4
              img(src="assets/images/bot-slide/bot-slide-4.png")
            .item.slide5
              img(src="assets/images/bot-slide/bot-slide-5.png")
            .item.slide6
              img(src="assets/images/bot-slide/bot-slide-6.png")
        .play-our-games-bottom-text
          p ... and on casino floors!



    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="assets/js/owl.animate.js")
    script(src="assets/js/owl.carousel.js")
    script(src="assets/js/app.js")







  include footer.pug

