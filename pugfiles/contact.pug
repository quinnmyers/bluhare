doctype html
html
  
  head
    title='Bluhare'
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='assets/css/index.css') 
    link(rel='stylesheet' href='assets/css/animate.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Questrial')
    meta(http-equiv='cache-control' content='max-age=0')
    meta(http-equiv='cache-control' content='no-cache')
    meta(http-equiv='expires' content='0')
    meta(http-equiv='expires' content='Tue, 01 Jan 1980 1:00:00 GMT')
    meta(http-equiv='pragma' content='no-cache')
      
  header#nav-section
  include navigation.pug
  
  body
    .main-wrapper
      h2.page-title Contact Us
      .page-break
      .contact-wrapper
        .contact-left-info
          p.contact-info Bluhare Studios
          br 
          p 3227 E. Warm Springs Ave. Suite 200
          br 
          p Las Vegas, NV 89120
        .contact-form-container
          form(action='https://formspree.io/contact@bluhare.com', method='POST')
            label.formlabel(for='your-name') Your Name
            .name
              input(type='text', name='name') 
            label.formlabel(for='your-email') Your Email 
            .email
              input(type='email', name='_replyto')
            label.formlabel(for='message') Message
            .message 
              textarea(type='textarea', name='message')
            .send-button
              input(type='submit', value='send')
                    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="assets/js/app.js")  
      
  include footer.pug
